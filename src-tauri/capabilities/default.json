{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME/**" }]
    }
  ]
}
